pipeline {
    agent {label 'Jenkins-Agent'}
    tools {
        jdk 'Java17'
        maven 'Maven3'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage("SonarQube Analysis"){
           steps {
	           script {
		        withSonarQubeEnv(installationName: 'sonarqube-server') { 
                        sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin Version 3.23:sonar'
		          }
	           }	
             }
        }
    }
}
